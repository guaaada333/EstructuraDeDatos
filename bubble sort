//ordenar cola con bubbleSort
void bubbleSort(int A[], int n);
void mostrar(int A[],int n);
using namespace std ;
#include <iostream>

int main(){
    int A[]={2,9,4,7,6,5,8,3,10,1};
    int n=10 ;
    
 cout<<"El arreglo sin ordenar es :"<<endl ;
mostrar(A,n);
cout<<" "<<endl ;
bubbleSort(A,n);
cout<<" "<<endl ;

 cout<<"El arreglo ordenado es :"<<endl ;
mostrar(A,n);

    return 0;
}

void mostrar(int A[],int n){
for(int i=0;i<n ;i++){
    cout<<A[i]<<" ";
}
}

void bubbleSort(int A[], int n) {
    bool intercambiado;
    for (int i = 0; i < n - 1; i++) {
        intercambiado = false;
        for (int j = 0; j < n - 1 - i; j++) {
            if (A[j] > A[j + 1]) {
                // Intercambiar elementos
                int temp = A[j];
                A[j] = A[j + 1];
                A[j + 1] = temp;
                intercambiado = true;
            }
        }
        // Si no hubo intercambio, el arreglo ya est√° ordenado
        if (!intercambiado)
            break;
    }
}
