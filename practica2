#include <iostream>
using namespace std;

void mostrarArreglo(int G[], int m);//funcion para mostrar el arreglo en pantalla
void buscarElemento(int G[], int m ,int e);//m es la cantidad de elementos o cuantos voy a usar y e el elemento que buscara

int main(){
    int G[6]; //declaracion de arreglo de 6 enteros
    int e ;
    
    for(int i=0 ; i<6 ; i++){//ciclo for para que el usuario introduzca 6 veces un numero
    cout<<"introducir arreglo"<<endl;
    cin>>G[i] ;//aca se guarda lo q el usuario pone
    
    }
    mostrarArreglo(G,6);//llamo a la funcion mostrarArreglo y muestra el arreglo
    
    cout<<"Que elemento desea buscar en el arreglo"<<endl;
    cin>>e ;
    
    buscarElemento(G,6,e);
    return 0 ;
}
void mostrarArreglo(int G[],int m){//la funcion mostrarArreglo 
for(int i=0 ; i<m ; i++){
    cout << G[i] << " - ";//muestra cada elemento que se guardo en el arreglo
   }
  cout<<endl;
 }

void buscarElemento(int G[], int m ,int e){
    for(int i=0 ; i<m ; i++){
        if(G[i]== e){
            cout<<"enconte el elemento"<<e<<"en la posicion "<<i<<endl;
            
        }
        
    }
}
