#include <iostream>
using namespace std ;


void mostrar(char A[],int n);
void eleminar(char A[],int n , char x);
void mostrar(char A[],int n);

int main(){
    char A[]={'0','1','2','3','4'};
    int n=5 ;
    char x;
    
    mostrar(A,n);
    cout<<" "<<endl;
    
     eleminar(A,n,x);
     cout<<" "<<endl;

    mostrar(A,n);
    cout<<" "<<endl;



    return 0;
}

void mostrar(char A[],int n){
    for(int i=0 ;i<n ;i++){
        cout<<A[i]<<" ";
    }
cout<<endl ;
}
 void eleminar(char A[],int n,char x){
     cout<<"Que elemento desea eleminar :";
     cin>> x ;
     for(int i=0 ;i<n ;i++){
         if(A[i]==x){
             A[i]= '*' ;
         }
         
         
     }
 }
    
   
